singularity {
	enabled = true
}

docker {
	enabled = false
}

process {

   executor = 'slurm'
   clusterOptions = '--qos=short'
   cpus = '12'

   withName:centrifugeMatchExtraction {
     memory = { 40.GB * task.attempt }
   }

   withName:bwa {
     memory = { 40.GB * task.attempt }
   }

   withName:manta {
     memory = { 40.GB * task.attempt }
   }

}

params {

   centrifugePaVEIndex = '/groups/obenauf/Software/indices/virus/Centrifuge/centrifuge/PaVE/virus-detection-nf/'
   centrifugeRefSeqIndex = '/groups/obenauf/Software/indices/virus/Centrifuge/centrifuge/custom/virus-detection-nf/'
	 centrifugeENAIndex = '/groups/obenauf/Software/indices/virus/Centrifuge/centrifuge/ENA/virus-detection-nf/'

   BWAPaVEIndex = '/groups/obenauf/Software/indices/virus/Centrifuge/bwa/PaVE/'
	 BWARefSeqIndex = '/groups/obenauf/Software/indices/virus/Centrifuge/bwa/RefSeq/'
   BWAENAIndex = '/groups/obenauf/Software/indices/virus/Centrifuge/bwa/ENA/'

}
