singularity {
	enabled = true
}

docker {
	enabled = false
}

process {

	executor = 'slurm'
	clusterOptions = '--qos=short'
	cpus = '12'

    withName:centrifugePaVE {
        memory = { 40.GB * task.attempt }
    }

    withName:centrifugeRefSeq {
        memory = { 40.GB * task.attempt }
    }
    withName:centrifugeENA {
        memory = { 80.GB * task.attempt }
    }

}

params {

   PaVEIndex = '/groups/obenauf/Software/indices/virus/Centrifuge/centrifuge/PaVE/virus-detection-nf/'
   refseqIndex = '/groups/obenauf/Software/indices/virus/Centrifuge/centrifuge/custom/virus-detection-nf/'
   ENAIndex = '/groups/obenauf/Software/indices/virus/Centrifuge/centrifuge/ENA/virus-detection-nf/'

}
