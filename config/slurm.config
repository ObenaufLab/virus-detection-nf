singularity {
	enabled = true
}

docker {
	enabled = false
}

process {

   executor = 'slurm'

	 withName: bamToFastq {
	    clusterOptions = '--reservation=interactive'
			cpus = '8'
			memory = { 4.GB * task.attempt }
	 }

	 withName: trinity {
			clusterOptions = '--qos=short'
			cpus = '6'
			memory = { 20.GB * task.attempt }
	 }

	 withName: transdecoder {
			clusterOptions = '--reservation=interactive'
			cpus = '2'
			memory = { 4.GB * task.attempt }
	 }

	 withName: blastx {
			clusterOptions = '--reservation=interactive'
			cpus = '10'
			memory = { 10.GB * task.attempt }
	 }

	 withName: blastp {
			clusterOptions = '--reservation=interactive'
			cpus = '10'
			memory = { 10.GB * task.attempt }
	 }

	 withName: hmmscan {
			clusterOptions = '--reservation=interactive'
			cpus = '10'
			memory = { 10.GB * task.attempt }
	 }

	 withName: trinotatedb {
			clusterOptions = '--reservation=interactive'
			cpus = '4'
			memory = { 10.GB * task.attempt }
	 }
}

params {

   sqlite = '/groups/obenauf/Software/trinotate/boilerplate/Trinotate.sqlite'
	 blastdb = '/groups/obenauf/Software/trinotate/boilerplate/uniprot_sprot_p61BRAF.pep'
	 pfamdb = '/groups/obenauf/Software/trinotate/boilerplate/Pfam-A.hmm'

}
